#include <cs50.h>
#include <stdio.h>

int main(void)
{

int h;

  do

  {  

    // ask user to input height 
    h = get_int("Height: ");
  }

  while (h < 1 || h > 8);

  for (int i = 0; i < h; i++)
  {
      for (int j = 0; j < h; j++)

      { 
        if (i + j < h - 1)
        
        printf(" ");
        
        else 
        
        printf("#");
        
      }
      //spaces out between two blocks 
      for (int l=1; l <=2; l++)
     {
        printf(" ");
     }
      for (int k = h - i; k <= h; k++)
     {
        printf("#");
     }  
      
      printf("\n");

   }

}
 
